<language-addon>
    <addon-name>core-components</addon-name>
    <language-name>xul/html</language-name>

    <component>
        <component-name>data-table</component-name>
        <macro-uri>/pages/component/data-table.zul</macro-uri>
        <inline>true</inline>
    </component>

    <component>
        <component-name>button</component-name>
        <extends>button</extends>
        <property>
            <property-name>autodisable</property-name>
            <property-value>self</property-value>
        </property>
    </component>

    <component>
        <component-name>bs-row</component-name>
        <extends>div</extends>
        <property>
            <property-name>sclass</property-name>
            <property-value>row py-1</property-value>
        </property>
    </component>

    <component>
        <component-name>state-box</component-name>
        <template-uri>/pages/component/stateBox.zul</template-uri>
    </component>
    
</language-addon>
